<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field-container">
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border-0 rounded-0 p-text",
                        placeholder: "Email",required: true %>
    </div>

    <hr class="width-90 mx-auto">

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control border-0 rounded-0 p-text",
                           placeholder: "Password",required: true%>
    </div>

  </div>

<% end %>

<div class="text-center">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class:"p-text link"%><br />
  <% end %>
</div>
